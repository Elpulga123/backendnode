<section class="htc__category__area ptb--100">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title--2 text-center">
                    <h2 class="title__line">New Arrivals</h2>
                    <p>But I must explain to you how all this mistaken idea</p>
                </div>
            </div>
        </div>
        <div class="htc__product__container">
            <div class="row">
                <div class="product__list clearfix mt--30">
                    <!-- Start Single Category -->
                    <% products.forEach(function(product){ %>
                    <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                        <div class="category">
                            <div class="ht__cat__thumb">
                                <a href="/product/<%= product._id %>">
                                    <img src="/assets/images/products/<%= product.image[0] %>" alt="product images">
                                </a>
                            </div>
                            <div class="fr__hover__info">
                                <ul class="product__action">
                                    <li><a href="wishlist.html" title="Yêu thích"<i class="icon-heart icons"></i></a></li>
                                    <li><a class="get-price" href="/cart/add_cart/<%= product._id %>" title="Thêm vào giỏ hàng"><i class="icon-handbag icons"></i></a></li>
                                    <li><a href="#"><i class="icon-shuffle icons"></i></a></li>
                                </ul>
                            </div>
                            <div class="fr__product__inner">
                                <h4><a href="/product/<%= product._id %>"><%= product.name %></a></h4>
                                <ul class="fr__pro__prize">
                                    <li class="old__prize"> <span class="price-transform"> <%= product.price %> </span> </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <!-- End Single Category -->
                </div>
            </div>
        </div>
    </div>
</section>